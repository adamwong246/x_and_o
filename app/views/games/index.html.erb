<h1>Listing games</h1>

<table>
  <tr>
    <th>X user</th>
    <th>O user</th>
    <th>Board</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.x_user_id %></td>
    <td><%= game.o_user_id %></td>
    <td><%= game.board %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

